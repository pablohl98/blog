<h1 align= center style="margin-top: -8px;">Articulos</h1>
<div>
<%= link_to 'Todos los Artículos', articles_path %>
<% @categories.each do |category| %>
  <%= link_to articles_path(category_id: category.id) do %>
    <%= category.name %>
  <% end %>
<% end %>
</div>
<div>
<%= link_to 'Todos los Artículos', articles_path %>
<% @authors.each do |author| %>
  <%= link_to articles_path(author_id: author.id) do %>
    <%= author.name %>
  <% end %>
<% end %>

</div>

<hr>


<% @articles.each do |article| %>
    <%= link_to article_path(article.id) do %>
        <h2 style="margin-top: -8px;"><%=  article.title%></h2>
    <% end %>
    <h4><%=  article.content%></h4>
    <div>
    <% if article.image.present? %>
    <%= image_tag article.image.url, size: "400x280" %>
    <% end %>
    </div>
    <span>
    <%= article.author.name %> - 
    <%= article.category.name %> -
    <%= article.updated_at.strftime('%d/%m/%Y') %>
    </span>
    <hr>    
<% end %>
